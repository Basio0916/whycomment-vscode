{
  "name": "whycomment",
  "displayName": "WhyComment",
  "description": "Automatically detect code sections that need explanatory comments and suggest improvements",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "whycomment.helloWorld",
        "title": "WhyComment: Hello World"
      },
      {
        "command": "whycomment.extractContext",
        "title": "WhyComment: Extract Context"
      }
    ],
    "configuration": {
      "title": "WhyComment",
      "properties": {
        "whycomment.contextLines": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Number of lines to extract before and after changes"
        },
        "whycomment.excludeComments": {
          "type": "boolean",
          "default": false,
          "description": "Exclude comment lines from context extraction"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
