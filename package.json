{
  "name": "whycomment",
  "displayName": "WhyComment",
  "description": "Automatically detect code sections that need explanatory comments and suggest improvements",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "whycomment.helloWorld",
        "title": "WhyComment: Hello World"
      },
      {
        "command": "whycomment.analyzeChanges",
        "title": "WhyComment: Analyze Changes"
      }
    ],
    "configuration": {
      "title": "WhyComment",
      "properties": {
        "whycomment.contextLines": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Number of lines to extract before and after changed lines for context analysis"
        },
        "whycomment.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable WhyComment analysis"
        },
        "whycomment.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze changes on file save"
        },
        "whycomment.debounceMs": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Delay in milliseconds before starting analysis after file save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "simple-git": "^3.28.0"
  }
}
